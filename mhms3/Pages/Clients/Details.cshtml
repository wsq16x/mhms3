@page
@model mhms3.Pages.Clients.DetailsModel

@{
    Layout = "_DashboardCounselor";
    ViewData["Title"] = "Details";
}

<!--new code-->
<div class="container-xl">
    <!-- Page title -->
    <div class="page-header d-print-none">
        <div class="row align-items-center">
            <div class="col">
                <!-- Page pre-title -->
                <div class="page-pretitle">
                    Clients
                </div>
                <h2 class="page-title">
                    Client Details
                </h2>
            </div>
            <!-- Page title actions -->
            <div class="col-auto ms-auto d-print-none">
                <div class="btn-list">

                    <a asp-page="/Appointments/Index" class="btn btn-primary d-none d-sm-inline-block">
                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-arrow-left" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                            <line x1="5" y1="12" x2="19" y2="12"></line>
                            <line x1="5" y1="12" x2="11" y2="18"></line>
                            <line x1="5" y1="12" x2="11" y2="6"></line>
                        </svg>
                        Back to list
                    </a>
                    <a asp-page="./Edit" asp-route-id="@Model.Client.ClientId" class="btn btn-white d-none d-sm-inline-block">
                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-edit" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                            <path d="M9 7h-3a2 2 0 0 0 -2 2v9a2 2 0 0 0 2 2h9a2 2 0 0 0 2 -2v-3"></path>
                            <path d="M9 15h3l8.5 -8.5a1.5 1.5 0 0 0 -3 -3l-8.5 8.5v3"></path>
                            <line x1="16" y1="5" x2="19" y2="8"></line>
                        </svg>
                        Edit
                    </a>
                    <a class="btn btn-danger d-none d-sm-inline-block" data-bs-toggle="modal" data-bs-target="#modal-delete">
                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-trash" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                            <line x1="4" y1="7" x2="20" y2="7"></line>
                            <line x1="10" y1="11" x2="10" y2="17"></line>
                            <line x1="14" y1="11" x2="14" y2="17"></line>
                            <path d="M5 7l1 12a2 2 0 0 0 2 2h8a2 2 0 0 0 2 -2l1 -12"></path>
                            <path d="M9 7v-3a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v3"></path>
                        </svg>
                        Delete
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!--page body-->
<div class="page-body">
    <div class="container-xl">
        <div class="row row-deck row-cards">
            <div class="col-lg-10">
                <div class="card">
                    <div class="card">
                        <div class="card-body">
                            <h3 class="card-title"> Personal Details</h3>

                            <div class="col-12">
                                <div class="mb-3">
                                    <label class="form-label">
                                        @Html.DisplayNameFor(model => model.Client.FirstName)
                                    </label>
                                    <input class="form-control" type="text" value="@Html.DisplayFor(model => model.Client.FirstName)" readonly="">
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">
                                        @Html.DisplayNameFor(model => model.Client.LastName)
                                    </label>
                                    <input class="form-control" type="text" value="@Html.DisplayFor(model => model.Client.LastName)" readonly="">
                                </div>
                                <div class="mb-3">
                                    <div class="row">
                                        <div class="col-4">
                                            <label class="form-label">
                                                @Html.DisplayNameFor(model => model.Client.Sex)
                                            </label>
                                            <input class="form-control" type="text" value="@Html.DisplayFor(model => model.Client.Sex)" readonly="">
                                        </div>
                                        <div class="col-8">
                                            <label class="form-label">
                                                @Html.DisplayNameFor(model => model.Client.BirthDate)
                                            </label>
                                            <input class="form-control" type="text" value="@Html.DisplayFor(model => model.Client.BirthDate)" readonly="">
                                        </div>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">
                                        @Html.DisplayNameFor(model => model.Client.Address)
                                    </label>
                                    <input class="form-control" type="text" value="@Html.DisplayFor(model => model.Client.Address)" readonly="" />
                                </div>
                                <div class="mb-3">
                                    <div class="row">
                                        <div class="col-6">
                                            <label class="form-label">
                                                @Html.DisplayNameFor(model => model.Client.Email)
                                            </label>
                                            <input class="form-control" type="text" value="@Html.DisplayFor(model => model.Client.Email)" readonly="">
                                        </div>
                                        <div class="col-6">
                                            <label class="form-label">
                                                @Html.DisplayNameFor(model => model.Client.Phone)
                                            </label>
                                            <input class="form-control" type="text" value="@Html.DisplayFor(model => model.Client.Phone)" readonly="">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-2">
                <div class="row row-cards">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-status-start bg-primary"></div>
                            <div class="card-body text-end">
                                <div class="h1">@ViewBag.total</div>
                                <div class="text-muted mb-2">Total Appointments</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="card">
                            <div class="card-status-start bg-success"></div>
                            <div class="card-body text-end">
                                <div class="h1">@ViewBag.completed</div>
                                <div class="text-muted mb-2">Appointments Completed</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="card">
                            <div class="card-status-start bg-warning"></div>
                            <div class="card-body text-end">
                                <div class="h1">@ViewBag.reschedule</div>
                                <div class="text-muted mb-2">Appointments Recheduled</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="card">
                            <div class="card-status-start bg-danger"></div>
                            <div class="card-body text-end">
                                <div class="h1">@ViewBag.missed</div>
                                <div class="text-muted mb-2">Appointments Missed</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h3>Appointments</h3>
                    </div>
                    <div class="card-table table-responsive">
                        <table class="table table-vcenter">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.AppointmentList[0].AppointmentId)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.AppointmentList[0].AppDate)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.AppointmentList[0].TimeStart)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.AppointmentList[0].TimeEnd)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.AppointmentList[0].Status)
                                    </th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.AppointmentList)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.AppointmentId)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.AppDate)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TimeStart)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TimeEnd)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => item.Status)
                                        </td>
                                        <td>
                                            <div class="btn-lis">
                                                <a class="btn btn-white d-none d-sm-inline-block" asp-page="/Appointments/Details" asp-route-id="@item.AppointmentId">
                                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-eye" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                        <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                                        <circle cx="12" cy="12" r="2"></circle>
                                                        <path d="M22 12c-2.667 4.667 -6 7 -10 7s-7.333 -2.333 -10 -7c2.667 -4.667 6 -7 10 -7s7.333 2.333 10 7"></path>
                                                    </svg>
                                                    View
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal modal-blur fade" id="modal-delete" tabindex="-1" style="display: none;" aria-hidden="true">
    <div class="modal-dialog modal-sm modal-dialog-centered" role="document">
        <div class="modal-content">
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            <div class="modal-status bg-danger"></div>
            <div class="modal-body text-center py-4">

                <!-- Download SVG icon from http://tabler-icons.io/i/alert-triangle -->
                <svg xmlns="http://www.w3.org/2000/svg" class="icon mb-2 text-danger icon-lg" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path d="M12 9v2m0 4v.01"></path><path d="M5 19h14a2 2 0 0 0 1.84 -2.75l-7.1 -12.25a2 2 0 0 0 -3.5 0l-7.1 12.25a2 2 0 0 0 1.75 2.75"></path></svg>


                <h3>Are you sure?</h3>
                <div class="text-muted">Do you really want to Delete this Client? It cannot be undone.</div>
            </div>

            <div class="modal-footer">
                <div class="w-100">
                    <div class="row">
                        <div class="col">
                            <a href="#" class="btn btn-white w-100" data-bs-dismiss="modal">
                                Cancel
                            </a>
                        </div>
                        <div class="col">
                            <form method="post">
                                <button asp-page-handler="Delete" asp-route-id="@Model.Client.ClientId" class="btn btn-danger w-100">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>