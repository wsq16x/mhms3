@page
@model mhms3.Pages.Clients.CreateModel

@{
    Layout = "_DashboardCounselor";
    ViewData["Title"] = "Create";
}
<div class="container-xl">
    <!-- Page title -->
    <div class="page-header d-print-none">
        <div class="row align-items-center">
            <div class="col">
                <!-- Page pre-title -->
                <div class="page-pretitle">
                    Clients
                </div>
                <h2 class="page-title">
                    Add new client
                </h2>
            </div>
            <!-- Page title actions -->
            <div class="col-auto ms-auto d-print-none">
                <div class="btn-list">
                    <a asp-page="/Clients/Index" class="btn btn-primary d-none d-sm-inline-block">
                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-arrow-left" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                            <line x1="5" y1="12" x2="19" y2="12"></line>
                            <line x1="5" y1="12" x2="11" y2="18"></line>
                            <line x1="5" y1="12" x2="11" y2="6"></line>
                        </svg>
                        Back to list
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="page-body">
    <div class="container-xl d-flex flex-column justify-content-center">
        <div class="row">
            <div class="col">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Enter Details</h3>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group mb-3 ">
                                <label asp-for="Client.FirstName" class="form-label"></label>
                                <div>
                                    <input asp-for="Client.FirstName" class="form-control" placeholder="enter first name" />
                                    <span asp-validation-for="Client.FirstName" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group mb-3 ">
                                <label asp-for="Client.LastName" class="form-label"></label>
                                <div>
                                    <input asp-for="Client.LastName" class="form-control" />
                                    <span asp-validation-for="Client.LastName" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group mb-3 ">
                                <label asp-for="Client.Sex" class="form-label"></label>
                                <div>
                                    <input asp-for="Client.Sex" class="form-control" />
                                    <span asp-validation-for="Client.Sex" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="Client.BirthDate" class="form-label"></label>
                                <div>
                                    <input asp-for="Client.BirthDate" class="form-control" />
                                    <span asp-validation-for="Client.BirthDate" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="Client.Address" class="form-label"></label>
                                <div>
                                    <input asp-for="Client.Address" class="form-control" />
                                    <span asp-validation-for="Client.Address" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="Client.Email" class="form-label"></label>
                                <div>
                                    <input asp-for="Client.Email" class="form-control" />
                                    <span asp-validation-for="Client.Email" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="Client.Phone" class="form-label"></label>
                                <div>
                                    <input asp-for="Client.Phone" class="form-control" />
                                    <span asp-validation-for="Client.Phone" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="Client.IdentificationNum" class="form-label"></label>
                                <div>
                                    <input asp-for="Client.IdentificationNum" class="form-control" />
                                    <span asp-validation-for="Client.IdentificationNum" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-footer">
                                <button type="submit" class="btn btn-primary">Create</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
