@page
@model mhms3.Pages.Appointments.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "_DashboardCounselor";
}
@{ 
  
}

<div class="container-xl">
    <!-- Page title -->
    <div class="page-header d-print-none">
        <div class="row align-items-center">
            <div class="col">
                <!-- Page pre-title -->
                <div class="page-pretitle">
                    Overview
                </div>
                <h2 class="page-title">
                   Appointment
                </h2>
            </div>
            <!-- Page title actions -->
            <div class="col-auto ms-auto d-print-none">
                <div class="btn-list">
                    <a asp-page="/Appointments/Create" class="btn btn-primary d-none d-sm-inline-block">
                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-plus" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                            <line x1="12" y1="5" x2="12" y2="19"></line>
                            <line x1="5" y1="12" x2="19" y2="12"></line>
                        </svg>
                        Create new appointment
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="page-body">
    <div class="container-xl d-flex flex-column justify-content-center">
        <div class="row">
            <div class="col">
                <div class="card">
                    <div class="card-table table-responsive">
                        <table class="table table-vcenter">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Appointment[0].Client)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Appointment[0].AppDate)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Appointment[0].TimeStart)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Appointment[0].TimeEnd)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Appointment[0].SessionKey)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Appointment[0].Status)
                                    </th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Appointment)
                                {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Client.ClientId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AppDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TimeStart)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TimeEnd)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SessionKey)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => item.Status)
                                    </td>
                                    <td>
                                        <div class="btn-lis">
                                            <a class="btn btn-white d-none d-sm-inline-block" asp-page="./Details" asp-route-id="@item.AppointmentId">
                                                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-eye" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                                    <circle cx="12" cy="12" r="2"></circle>
                                                    <path d="M22 12c-2.667 4.667 -6 7 -10 7s-7.333 -2.333 -10 -7c2.667 -4.667 6 -7 10 -7s7.333 2.333 10 7"></path>
                                                </svg>
                                                View
                                            </a>
                                            <a asp-page="/Call/CallCounselor" asp-route-AppId="@item.AppointmentId" class="btn btn-outline-green d-none d-sm-inline-block">
                                                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-video" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                                    <path d="M15 10l4.553 -2.276a1 1 0 0 1 1.447 .894v6.764a1 1 0 0 1 -1.447 .894l-4.553 -2.276v-4z"></path>
                                                    <rect x="3" y="6" width="12" height="12" rx="2"></rect>
                                                </svg>
                                                Start Call
                                            </a>
                                        </div>  
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
