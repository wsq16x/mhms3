@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "_IdentityTemplate";
}

<form class="card card-md" method="post" autocomplete="off">
    <div class="card-body">
        <h2 class="card-title text-center mb-4">Login to your account</h2>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="Input.Email" class="form-label"></label>
            <input asp-for="Input.Email" type="email" class="form-control" placeholder="Enter email">
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="mb-2">
            <label asp-for="Input.Password" class="form-label">Password
                <span class="form-label-description">
                    <a href="./ForgotPassword">I forgot password</a>
                </span>
            </label>
            <div class="input-group input-group-flat">
                <input asp-for="Input.Password"type="password" class="form-control" placeholder="Password" autocomplete="off">
                <span class="input-group-text">
                    <a href="#" class="link-secondary" title="" data-bs-toggle="tooltip" data-bs-original-title="Show password">
                        <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><circle cx="12" cy="12" r="2"></circle><path d="M22 12c-2.667 4.667 -6 7 -10 7s-7.333 -2.333 -10 -7c2.667 -4.667 6 -7 10 -7s7.333 2.333 10 7"></path></svg>
                    </a>
                </span>
            </div>
        </div>
        <div class="mb-2">
            <label asp-for="Input.RememberMe" class="form-check">
                <input asp-for="Input.RememberMe" type="checkbox" class="form-check-input">
                <span class="form-check-label">@Html.DisplayNameFor(m => m.Input.RememberMe)</span>
            </label>
        </div>
        <div class="form-footer">
            <button type="submit" class="btn btn-primary w-100">Sign in</button>
        </div>
    </div>
</form>
<div class="text-center text-muted mt-3">
    Don't have account yet? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" tabindex="-1">Sign up</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
