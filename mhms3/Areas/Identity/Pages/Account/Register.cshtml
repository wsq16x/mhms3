@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "_IdentityTemplate";
}

<form asp-route-returnUrl="@Model.ReturnUrl" class="card card-md" method="post" autocomplete="off">
    <div class="card-body">
        <h2 class="card-title text-center mb-4">Register new account</h2>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="Input.Email" class="form-label">Email address</label>
            <input asp-for="Input.Email" type="email" class="form-control" placeholder="Enter email">
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="mb-2">
            <label asp-for="Input.Password" class="form-label">
                Password
            </label>
            <div class="input-group input-group-flat">
                <input asp-for="Input.Password" type="password" class="form-control" placeholder="Password" autocomplete="off">
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        </div>
        <div class="mb-2">
            <label asp-for="Input.ConfirmPassword" class="form-label">
                Confirm Password
            </label>
            <div class="input-group input-group-flat">
                <input asp-for="Input.ConfirmPassword" type="password" class="form-control" placeholder="Password" autocomplete="off">
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
        </div>

        <div class="form-footer">
            <button type="submit" class="btn btn-green w-100">Create Account</button>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
